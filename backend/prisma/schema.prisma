// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ==================== ENUMS ====================

enum Faction {
  ALLIANCE
  HORDE
}

enum Race {
  // Alliance
  HUMAN
  DWARF
  NIGHT_ELF
  GNOME
  DRAENEI
  // Horde
  ORC
  UNDEAD
  TAUREN
  TROLL
  BLOOD_ELF
}

enum CharacterClass {
  WARRIOR
  PALADIN
  HUNTER
  ROGUE
  PRIEST
  SHAMAN
  MAGE
  WARLOCK
  DRUID
}

enum QuestStatus {
  AVAILABLE
  IN_PROGRESS
  COMPLETED
}

enum CampaignStatus {
  ACTIVE
  ARCHIVED
}

enum TransactionType {
  XP_GAIN
  GOLD_GAIN
  GOLD_SPEND
}

// ==================== MODELS ====================

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  character Character?

  @@map("users")
}

model Character {
  id        String         @id @default(cuid())
  name      String
  faction   Faction
  race      Race
  class     CharacterClass
  xpTotal   Int            @default(0) @map("xp_total")
  level     Int            @default(1)
  gold      Int            @default(0)
  createdAt DateTime       @default(now()) @map("created_at")
  updatedAt DateTime       @updatedAt @map("updated_at")

  userId String @unique @map("user_id")
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  campaigns    Campaign[]
  wishItems    WishItem[]
  transactions Transaction[]

  @@map("characters")
}

model Campaign {
  id          String         @id @default(cuid())
  title       String
  description String?
  status      CampaignStatus @default(ACTIVE)
  createdAt   DateTime       @default(now()) @map("created_at")
  updatedAt   DateTime       @updatedAt @map("updated_at")

  characterId String    @map("character_id")
  character   Character @relation(fields: [characterId], references: [id], onDelete: Cascade)

  questChains QuestChain[]

  @@map("campaigns")
}

model QuestChain {
  id        String   @id @default(cuid())
  title     String
  order     Int      @default(0)
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  campaignId String   @map("campaign_id")
  campaign   Campaign @relation(fields: [campaignId], references: [id], onDelete: Cascade)

  quests Quest[]

  @@map("quest_chains")
}

model Quest {
  id               String      @id @default(cuid())
  title            String
  objective        String
  description      String?
  status           QuestStatus @default(AVAILABLE)
  order            Int         @default(0)
  estimatedMinutes Int?        @map("estimated_minutes")
  isMilestone      Boolean     @default(false) @map("is_milestone")
  addressesFear    String?     @map("addresses_fear")
  xpReward         Int         @default(100) @map("xp_reward")
  goldReward       Int         @default(0) @map("gold_reward")
  isArchived       Boolean     @default(false) @map("is_archived")
  completedAt      DateTime?   @map("completed_at")
  createdAt        DateTime    @default(now()) @map("created_at")
  updatedAt        DateTime    @updatedAt @map("updated_at")

  questChainId String     @map("quest_chain_id")
  questChain   QuestChain @relation(fields: [questChainId], references: [id], onDelete: Cascade)

  steps QuestStep[]

  @@map("quests")
}

model QuestStep {
  id        String   @id @default(cuid())
  text      String
  isDone    Boolean  @default(false) @map("is_done")
  order     Int      @default(0)
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  questId String @map("quest_id")
  quest   Quest  @relation(fields: [questId], references: [id], onDelete: Cascade)

  @@map("quest_steps")
}

model WishItem {
  id          String   @id @default(cuid())
  title       String
  description String?
  costGold    Int      @map("cost_gold")
  isArchived  Boolean  @default(false) @map("is_archived")
  isRedeemed  Boolean  @default(false) @map("is_redeemed")
  redeemedAt  DateTime? @map("redeemed_at")
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")

  characterId String    @map("character_id")
  character   Character @relation(fields: [characterId], references: [id], onDelete: Cascade)

  @@map("wish_items")
}

model Transaction {
  id          String          @id @default(cuid())
  type        TransactionType
  amount      Int
  description String?
  createdAt   DateTime        @default(now()) @map("created_at")

  characterId String    @map("character_id")
  character   Character @relation(fields: [characterId], references: [id], onDelete: Cascade)

  @@map("transactions")
}
