# Environment variables for World of Tasks
# Copy this file to .env and fill in the values

# Database
DATABASE_URL=postgresql://postgres:postgres@db:5432/worldoftasks?schema=public
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=worldoftasks

# Backend
BACKEND_PORT=4000
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=7d

# Frontend
NEXT_PUBLIC_API_URL=http://localhost:4000/api

# AI (configure when provider is chosen)
# AI_PROVIDER=openai
# AI_API_KEY=your-api-key
